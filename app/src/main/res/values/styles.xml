<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">25dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="descText">
        <item name="android:textSize">18dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>

    <style name="news">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="newsTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:background">#33a0ef</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="newsContent">
        <item name="android:textSize">18dp</item>
        <item name="android:background">#f2faff</item>
        <item name="android:textColor">#002038</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <!--Регистрация-->
    <style name="registrationFieldStyle">
        <item name="android:textColor">#4e4e4e</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="registrationButton">
        <item name="android:textSize">22dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
